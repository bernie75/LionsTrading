<section id="about" class="container content-section text-center">
  <div class="row">
    <div class="container">
      <div class="row">
        <h1>Financial Products & Other Investment Projects</h1>
        <% @products.each do |product| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">

              <div class="caption">
                <h3><%= link_to product.name, product_path(product) %></h3>
                <p><%= product.sku %></p>
                <p>Amount: <%= humanized_money_with_symbol(product.price) %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<%= link_to 'Back', root_path, class: 'btn btn-primary' %>
