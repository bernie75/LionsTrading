<section id="about" class="container content-section text-center">
  <div class="row">
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @product.name %></h1>
    </div>
  </div>
  <div class="row">


      <p><%= @product.sku %></p>
      <p>Amount: <%= humanized_money_with_symbol(@product.price) %></p>
      <%= form_tag orders_path do %>
      <%= hidden_field_tag 'product_id', @product.id %>
      <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>

  </div>
</div>
</div>
</section>
